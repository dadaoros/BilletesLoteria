<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootPane"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/light_style"
    tools:context=".GestionarBilletes">

    <LinearLayout
        android:id="@+id/root_bar"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:orientation="horizontal"
        android:paddingTop="4sp"
        android:layout_alignParentBottom="true" >

        <ImageButton android:id="@+id/add_ticket"
            style="@style/TabbedButton"
            android:src="@drawable/ic_action_new_event"
         />
        <ImageButton android:id="@+id/delete_ticket"
            style="@style/TabbedButton"
            android:src="@drawable/ic_action_discard"
            />
        <ImageButton android:id="@+id/ticket_list"
            style="@style/TabbedButton"
            android:src="@drawable/ic_action_view_as_list"
            />

    </LinearLayout>

</RelativeLayout>